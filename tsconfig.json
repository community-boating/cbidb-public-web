{
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./dist/test",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
	//	"noUnusedLocals": true,
		"lib": [
			"es5",
			"es6",
			"dom"
		],
		"paths": {
			"@async/*": ["async/*"],
			"@routes/*": ["app/routes/*"],
			"@paths/*": ["app/paths/*"],
			"@app/*": ["app/*"],
			"@components/*": ["components/*"],
			"@containers/*": ["containers/*"],
			"@core/*": ["core/*"],
			"@lov/*": ["lov/*"],
			"@models/*": ["models/*"],
			"@facta/*": ["theme/facta/*"],
			"@joomla/*": ["theme/joomla/*"],
			"@util/*": ["util/*"]
		}
	},
	"include": [
		"./src/**/*",
		"./lib/**/*",
		"./test/**/*"
	]
}